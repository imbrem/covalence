{
	"name": "covalence-lsp",
	"description": "The Covalence Language Server",
	"author": "Jad Elkhaleq Ghalayini",
	"license": "0BSD",
	"version": "0.1.0",
	"workspaces": [
		"client",
		"server"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/imbrem/covalence"
	},
	"publisher": "covalence",
	"categories": [],
	"keywords": [
		"WASM",
		"Component Model",
		"LSP",
		"Language Server"
	],
	"engines": {
		"vscode": "^1.88.0"
	},
	"main": "./client/dist/desktop/extension",
	"browser": "./client/dist/web/extension",
	"extensionDependencies": [
		"ms-vscode.wasm-wasi-core"
	],
	"contributes": {
		"languages": [
			{
				"id": "smt",
				"aliases": [
					"smt",
					"smt2",
					"sygus"
				],
				"extensions": [
					"smt2",
					"sy"
				],
				"configuration": "language-configuration.json"
			},
			{
				"id": "alethe",
				"aliases": [
					"alethe"
				],
				"extensions": [
					"alethe"
				],
				"configuration": "language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "smt",
				"scopeName": "source.smt",
				"path": "syntaxes/smt.tmLanguage.json"
			},
			{
				"language": "alethe",
				"scopeName": "source.smt",
				"path": "syntaxes/smt.tmLanguage.json"
			}
		]
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@stylistic/eslint-plugin": "^2.13.0",
		"@types/node": "^20.19.11",
		"@vscode/test-web": "^0.0.71",
		"@vscode/vsce": "^3.6.0",
		"esbuild": "^0.25.9",
		"eslint": "^9.33.0",
		"serve": "^14.2.4",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.40.0"
	},
	"scripts": {
		"vscode:prepublish": "bun run package",
		"build": "bun run --cwd client build && bun run --cwd server build",
		"package": "bun run --cwd client package && bun run --cwd server package",
		"lint": "cargo clippy --workspace --all-targets --all-features -- -D warnings && bun run --cwd client lint",
		"doc": "cargo doc --no-deps",
		"view-docs": "cargo doc --no-deps --open",
		"browser": "bun run vscode-test-web ./testbed/workspace --browserType=chromium --coi --extensionId=ms-vscode.wasm-wasi-core --extensionDevelopmentPath=. .",
		"serve": "serve --cors -l 5000 --ssl-cert $HOME/certs/localhost.pem --ssl-key $HOME/certs/localhost-key.pem",
		"vsce-package": "bun run package && bun run vsce package --no-dependencies"
	}
}